<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/NextInit.Container.Box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/lose_animal_photo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fake_cat_1" />

    <TextView
        android:id="@+id/lose_animal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_alignBottom="@+id/lose_animal_photo"
        android:layout_alignLeft="@+id/lose_animal_photo"
        android:textSize="@dimen/text_size_xxlarge"
        android:textStyle="bold"
        android:text="Jacinto" />
    
</RelativeLayout>
